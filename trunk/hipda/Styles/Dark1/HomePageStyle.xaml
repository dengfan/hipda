<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="GroupHeaderStyle" TargetType="ListViewHeaderItem">
        <Setter Property="Padding" Value="7"/>
    </Style>

    <GroupStyle x:Key="listViewGroupStyle" HeaderContainerStyle="{StaticResource GroupHeaderStyle}">
        <GroupStyle.HeaderTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Name}" Style="{ThemeResource GroupHeaderTextBlockStyle}" />
            </DataTemplate>
        </GroupStyle.HeaderTemplate>
    </GroupStyle>

    <Style x:Key="ForumItemStyle" TargetType="ListViewItem">
        <Setter Property="Padding" Value="5,10,5,10" />
        <Setter Property="BorderThickness"  Value="{ThemeResource AppBarBottomBorderThemeThickness}"/>
        <Setter Property="BorderBrush" Value="#242424"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>

    <Style x:Key="AccountItemStyle" TargetType="ListViewItem">
        <Setter Property="BorderThickness"  Value="{ThemeResource AppBarBottomBorderThemeThickness}"/>
        <Setter Property="BorderBrush" Value="#242424"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>

</ResourceDictionary>