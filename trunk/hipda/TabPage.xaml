    <Grid>
        <Pivot x:Name="Pivot"
               CommonNavigationTransitionInfo.IsStaggerElement="True" 
               SelectionChanged="Pivot_SelectionChanged">
            <Pivot.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontSize="{ThemeResource TextStyleExtraExtraLargeFontSize}" />
                </DataTemplate>
            </Pivot.HeaderTemplate>
        </Pivot>

        <Grid x:Name="floorOriginalContentPanel" Visibility="Collapsed">
            <Rectangle Canvas.ZIndex="0" Fill="LightGray" Opacity="0.7" />
            <Border BorderThickness="0" Background="White" Margin="25,0,25,0" Padding="10,0,10,0">
                <WebView x:Name="webView" />
            </Border>
        </Grid>

        <Grid x:Name="postReplyPanel" Visibility="Collapsed">
            <Rectangle Canvas.ZIndex="0" Fill="LightGray" Opacity="0.7" />
            <Border x:Name="postPanelGrid" BorderThickness="0" Background="White" Margin="25,0,25,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBox x:Name="postReplyContentTextBox" Grid.Row="0" Margin="15,15,15,0" Height="300"
                             BorderThickness="0" Background="White" TextWrapping="Wrap" AcceptsReturn="True" PlaceholderText="编辑回复内容" />

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Enabled" Background="WhiteSmoke">
                        <ContentControl Template="{StaticResource imageFaceGrid}" />
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="postNewPanel" Visibility="Collapsed">
            <Rectangle Canvas.ZIndex="0" Fill="LightGray" Opacity="0.7" />
            <Border x:Name="postNewPanelGrid" BorderThickness="0" Background="White" Margin="25,0,25,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBox x:Name="postNewTitleTextBox" Grid.Row="0" Margin="15" BorderThickness="0" Background="White" PlaceholderText="编辑标题" />

                    <TextBox x:Name="postNewContentTextBox" Grid.Row="1" Margin="15,0,15,0" Height="250"
                             BorderThickness="0" Background="White" TextWrapping="Wrap" AcceptsReturn="True" PlaceholderText="编辑内容" />

                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Enabled" Background="WhiteSmoke">
                        <ContentControl Template="{StaticResource imageFaceGrid}" />
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <ProgressBar x:Name="replyProgressBar" IsIndeterminate="True" Visibility="Collapsed" />
    </Grid>

    <Page.BottomAppBar>
        <CommandBar x:Name="tabPageCommandBar" ClosedDisplayMode="Minimal" Background="{StaticResource CommandBarBgColor}" Foreground="{StaticResource CommandFontColor}">
            <AppBarButton x:Name="refreshThreadsButton" Icon="Refresh" Label="刷新" Click="refreshThreadsButton_Click" Visibility="Collapsed" />
            <AppBarButton x:Name="openPostNewPanelButton" Icon="Add" Label="发贴" Click="openPostNewPanelButton_Click" Visibility="Collapsed" />
            <AppBarButton x:Name="openPostReplyPanelButton" Icon="Edit" Label="评论" Click="openPostReplyPanelButton_Click" Visibility="Collapsed" />
            <AppBarToggleButton x:Name="reverseListButton" Label="倒序看贴" Click="reverseListButton_Click" Visibility="Collapsed">
                <AppBarToggleButton.Icon>
                    <FontIcon FontFamily="Segoe UI Symbol" Glyph="&#xE169;"/>
                </AppBarToggleButton.Icon>
            </AppBarToggleButton>
            <AppBarButton x:Name="sendButton" Icon="Send" Label="发布" Click="sendButton_Click" Visibility="Collapsed" />
            <CommandBar.SecondaryCommands>
                <AppBarButton x:Name="openForumTab" Label="打开...">
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="打开 Discovery 版" Click="openTabForDiscovery_Click" />
                            <MenuFlyoutItem Text="打开 Buy Sell 版" Click="openTabForBuyAndSell_Click" />
                            <MenuFlyoutItem Text="打开 Eink 版" Click="openTabForEink_Click" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <!--<AppBarButton x:Name="openTabForDiscovery" Label="地板" Click="openTabForDiscovery_Click" />
                <AppBarButton x:Name="openTabForBuyAndSell" Label="BS 版" Click="openTabForBuyAndSell_Click" />
                <AppBarButton x:Name="openTabForEink" Label="Eink 版" Click="openTabForEink_Click" />-->
                <AppBarButton x:Name="closeTab" Label="关闭当前标签页" Click="closeTab_Click" />
                <AppBarButton x:Name="openTabForApp" Label="特别感谢 + 关于 + 反馈" Click="openTabForApp_Click" />
                <AppBarButton x:Name="dark1ModeToggle" Label="夜间模式" Click="dark1ModeToggle_Click" />
                <AppBarButton x:Name="light1ModeToggle" Label="日间模式" Click="light1ModeToggle_Click" />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
